!!!
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "UTF-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %meta{:content => "A website for the northeast Citroen enthusiasts gathering", :name => "description"}/
    %meta{:content => "Citroen Rendezvous, LLC", :name => "author"}/
    
    - # Social metatags
    %meta{ :property => "fb:app_id", :content => '146487272381428' }
    %meta{ :property => "og:type", :content => 'website' }
    %meta{ :property => "og:site_name", :content => 'Citroen Rendezvous' }
    %meta{ :property => "og:url", :content => 'http://citroenrendezvous.org' }
    %meta{ :property => "og:title", :content => 'Citroen Rendezvous' }
    %meta{ :property => "og:description", :content => "The Northeast&#039;s largest gathering of Citroens and their fans, friends, and family." }
    %meta{ :property => "og:image", :content => 'http://citroenrendezvous.org/rendezvous-share.jpg' }
    %meta{ :property => "og:image:type", :content => 'image/jpeg' }
    %meta{ :property => "og:image:width", :content => '1200' }
    %meta{ :property => "og:image:height", :content => '699' }
    %meta{ :name => "twitter:card", :content => 'summary' }
    %meta{ :name => "twitter:title", :content => 'Citroen Rendezvous' }
    %meta{ :name => "twitter:url", :content => 'http://citroenrendezvous.org' }
    %meta{ :name => "twitter:description", :content => "The Northeast&#039;s largest gathering of Citroens and their fans, friends, and family." }
    %meta{ :name => "twitter:img:src", :content => 'http://citroenrendezvous.org/rendezvous-share.jpg' }
    %meta{ :name => "twitter:img:width", :content => '1200' }
    %meta{ :name => "twitter:img:height", :content => '699' }

    %title Citroen Rendezvous
    = stylesheet_link_tag "//cdn-images.mailchimp.com/embedcode/slim-081711.css"
    = stylesheet_link_tag 'application', :media  => 'all'
    %link{:href => "http://fonts.googleapis.com/css?family=Open+Sans:600italic,400,800,700,300", :rel => "stylesheet", :type => "text/css"}/

    = javascript_include_tag 'application'
    = csrf_meta_tags
    = yield :header_tags
    
    /
      [if lt IE 9]
      = javascript_include_tag "html5shiv"
      = javascript_include_tag "respond"
  
    - # ShareThis scripts
    %script{ :type => 'text/javascript' } var switchTo5x=true;
    %script{ :type => 'text/javascript', :src => "http://w.sharethis.com/button/buttons.js" }
    %script{ :type => 'text/javascript' } 
      stLight.options({publisher: "1cb126ce-1123-4660-9a5a-2f72547b6a80", doNotHash: true, doNotCopy: true, hashAddressBar: false});

    - # Google Analytics script
    %script{ :type => 'text/javascript' }
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-4773340-9', 'auto');
      ga('send', 'pageview');

  %body
    - if flash[:alert] || flash[:notice]
      .flash-wrapper
        .flash
          - if flash[:alert]
            .alert-danger{ :role => 'alert' }
              = flash[:alert]
          - if flash[:notice]
            .alert-info{ :role => 'alert' }
              = flash[:notice]
      
    %header.top-header
      - if user_signed_in?
        .logged-in
          %p #{logged_in_user(current_user)}
          %p
            = link_to "Sign out", destroy_user_session_path
            |
            %a{ :href => "/user/profile", :title => "Edit my profile"}
              %i.fa.fa-gear
            |
            %a{ :href => "/my-pictures", :title => "Edit my pictures"}
              %i.fa.fa-image
      #social
        %span.st_facebook_large{ :displayText =>'Facebook' }
        %span.st_twitter_large{ :displayText => 'Tweet' }
        %span.st_email_large{ :displayText => 'Email' }           
      .container
        .row.header-row
          .col-md-12
            %nav.navbar.navbar-default
              %a{:href => "/"}
                = image_tag 'rendezvous-logo.png', :alt => 'Citroen Rendezvous', :class => 'logo', :style => 'margin-top: 0px; border-bottom: 0px none; margin-bottom: 10px;'
                
              .container-fluid
                / Brand and toggle get grouped for better mobile display
                .navbar-header
                  %button.navbar-toggle.collapsed{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
                    %span.sr-only Toggle navigation
                    %span.icon-bar
                    %span.icon-bar
                    %span.icon-bar
                / Collect the nav links, forms, and other content for toggling
                #bs-example-navbar-collapse-1.collapse.navbar-collapse
                  %ul.nav.navbar-nav.navbar-right
                    %li
                      %a{:href => "/#sec1"} home
                    %li
                      %a{:href => "/#sec2"} schedule
                    %li
                      %a{:href => "/#sec3"} info
                    %li
                      %a{:href => "/#sec4"} photos
                    %li
                      %a{:href => "/#sec5"} contact us
                / /.navbar-collapse
              / /.container-fluid
    = yield

