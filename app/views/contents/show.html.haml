.container
  .panel.panel-default
    .panel-heading
      - if @content.published
        - klass = "text-success"
      - else
        - klass = "text-danger"
      %h3.panel-title
        = @content.identifier
        %div{:class => "pull-right #{klass}"}
          = @content.published? ? 'Published' : 'UNPUBLISHED'
    .panel-body
      %p
        %b Title:
        = @content.title
      %label Content
      %p= raw(@content.content)
      %p
        %b PDF file:
        - if @content.pdf.blank?
          (none)
        - else
          = link_to image_tag(@content.logo.url(:display)), @content.pdf

  = render :partial => 'components/back_dash_edit', :locals => { model: 'content', instance: @content, edit_page: false }

  