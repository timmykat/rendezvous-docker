.container
  .panel.panel-default
    .panel-heading
      %h3.panel-title= @company.name
    .panel-body
      %p
        %b Contact:
        = @company.contact.blank? ? '(none assigned)' : @company.contact.name
      %label Description
      %p= @company.description.html_safe
      %p
        %b URL:
        = link_to @company.url, @company.url
      %p
        %b Address:
        = @company.address
      %p
        %b Date joined:
        = @company.joined
      %p
        %b Company logo:
        %br
        - if @company.logo.blank?
          (none)
        - else
          = image_tag(@company.logo.url(:display))

  = render :partial => 'components/back_dash_edit', :locals => { model: 'company', instance: @company, edit_page: false }

  