- resource = :user
- resource_name = 'user'
.container
  .row
    .col-md-12
      %hr
      .account.email
        %h2 Sign In or Sign Up
    .col-md-6
      .well.sign-in
        %h3 Got an account? Sign in here.
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .form-group
            = f.label :email
            %br/
            = f.email_field :email, autofocus: true, :class => 'form-control', :placeholder => 'E-mail'
          .form-group
            = f.label :password
            %br/
            = f.password_field :password, autocomplete: "off", :class => 'form-control', :placeholder => 'Password'
          .actions
            = f.submit "Log in", :class => "btn btn-info"
        
    .col-md-6
      .well.sign-up
        %h3 Want an account? Sign up here.
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          .form-group
            = f.label :email
            %br/
            = f.email_field :email, autofocus: true, :class => 'form-control', :placeholder => 'E-mail', :required => true
          %p{ :class => 'help-block' } 
            Your password must be at least 6 characters and must include one each:
            %br
            Lower case:
            %i.fa.fa-check.pass.lower 
            Upper case:
            %i.fa.fa-check.pass.upper 
            Digit:
            %i.fa.fa-check.pass.digit 
          .form-group
            = f.label :password
            - if @minimum_password_length
              %em
                (#{@minimum_password_length} characters minimum)
            %br/
            = f.password_field :password, autocomplete: "off", :class => 'form-control primary', :placeholder => 'Set password', :required => true
          .form-group
            = f.label :password_confirmation
            %br/
            = f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control confirm', :placeholder => 'Confirm password', :required => true
          .form-group
            = f.label "Name"
            %br/
            = f.text_field :first_name, :class => 'form-control inline-form-element', :placeholder => 'First', :required => true
            = f.text_field :last_name, :class => 'form-control inline-form-element', :placeholder => 'Last', :required => true
          .form-group
            = recaptcha_tags
          .actions
            = f.submit "Sign up", :class => "btn btn-info"
