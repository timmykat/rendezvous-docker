.container
  .row
    .col-md-offset-3.col-md-6
      %h2 New Member Sign-up
      %p Membership is moderated; you will not have full access to member-accessible information until your sign-up has been confirmed by an administrator.

      = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-horizontal" }) do |f|
        - if resource.errors.any?
          .alert.alert-danger
            %h2 #{pluralize(resource.errors.count, "error")} prohibited this user from being saved:
            %ul
              - resource.errors.full_messages.each do |msg|
                %li= msg
        .form-group
          = f.label :email
          = f.text_field :email, :class => "form-control", :autofocus => true

        .form-group
          = f.label :name
          = f.text_field :name, :class => "form-control"

        .form-group
          = f.label "Company or Organization"
          = f.text_field :company_or_org, :class => "form-control"

        .form-group
          = f.label :password
          = f.password_field :password, :required => true, :class => "form-control"

        .form-group
          = f.label :password_confirmation
          = f.password_field :password_confirmation, :required => true, :class => "form-control"


        .form-group
          = f.label :avatar
          - if resource.avatar.blank?
            (no avatar)
          - else
            = image_tag resource.avatar.url(:display)
          = f.file_field :avatar

        .form-group
          = f.submit 'Sign up', :class => 'btn btn-success'     

      = render "devise/shared/links"
