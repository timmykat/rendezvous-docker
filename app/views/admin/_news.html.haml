.panel.panel-default
  .panel-heading
    %h3.panel-title News Items
  .panel-body
    - if @news_items.blank?
      %p No news items yet
    - else
      %table.table-condensed
        %thead
          %tr
            %th Date
            %th Headline
        %tbody
          - @news_items.each do |item|
            %tr
              %td= item.date
              %td= item.headline
              %td= render :partial => 'components/show_edit_delete', :locals => { :model => 'news_item', :instance => item }
        
    %br
      = link_to 'New news item', new_news_item_path, :type => 'button', :class => 'btn btn-primary'
          