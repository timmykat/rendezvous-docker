%div{ :class => members_waiting.blank? ? "panel panel-default" : "panel panel-warning" }
  .panel-heading
    %h3.panel-title 
      Members Awaiting Approval
  .panel-body
    %table.table-condensed
      %thead
        %tr
          %th Accept
          %th Name
          %th Email
          %th Company
      %tbody
        - members_waiting.each do |user|
          %tr
            %td
              - if user.approved?
                %button.approved.btn.btn-xs.btn-success Approved
              - else
                %button.accept.btn.btn-xs.btn-primary Accept
            %td= user.name
            %td= user.email
            %td= user.company_or_org
