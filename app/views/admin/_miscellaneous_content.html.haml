.panel.panel-default
  .panel-heading
    %h3.panel-title Miscellaneous Content
  .panel-body
    - if contents.blank?
      %p No miscellaneous content yet
    - else
      %table.table-condensed
        %thead
          %tr
            %th Identifier
            %th Title
            %th Image
            %th PDF
            %th{ :colspan => 3 } Actions
        %tbody
          - contents.each do |content|
            %tr
              %td= content.identifier
              %td= content.title
              %td= content.image.blank? ? '(none)' : image_tag(content.image(:list)) 
              %td= content.pdf.blank? ? '(none)' : (link_to image_tag('pdf_icon.png'), content.pdf.url)
              %td= link_to 'Show', content
              %td= link_to 'Edit', edit_content_path(content)
              %td= link_to 'Delete', content, :method => :delete, :data => { :confirm => 'Are you sure?' }
        
    %br
      = link_to 'New miscellaneous content', new_content_path, :type => 'button', :class => 'btn btn-primary'
          