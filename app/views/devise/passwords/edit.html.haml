%h2 Change your password
= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => "form-horizontal" }) do |f|
  = f.error_notification
  = f.hidden_field :reset_password_token
  = f.full_error :reset_password_token
  .form-group
    =f.label :new_password, :class => "col-sm-2 control-label"
    .col-sm-10
      = f.password_field :password, :required => false, :class => "form-control"
  .form-group
    =f.label :password_confirmation, :class => "col-sm-2 control-label"
    .col-sm-10
      = f.password_field :password_confirmation, :required => false, :class => "form-control"
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit "Change my password", :class => "btn btn-large btn-primary"
  .col-sm-offset-2.col-sm-10
    = render "devise/shared/links"
