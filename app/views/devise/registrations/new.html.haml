%h2 Sign up
= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-horizontal" }) do |f|
  = f.error_notification
  .form-group
    =f.label :email, :class => "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :email, :required => false, :autofocus => true, :class => "form-control"
  .form-group
    =f.label :password, :class => "col-sm-2 control-label"
    .col-sm-10
      = f.password_field :password, :required => false, :class => "form-control"
  .form-group
    =f.label :password_confirmation, :class => "col-sm-2 control-label"
    .col-sm-10
      = f.password_field :password_confirmation, :required => false, :class => "form-control"
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit "Sign up", :class => "btn btn-large btn-primary"
  .col-sm-offset-2.col-sm-10
    = render "devise/shared/links"
