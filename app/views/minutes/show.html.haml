.container
  .panel.panel-default
    .panel-heading
      %h3.panel-title
        = textify(@minute.meeting)
        .pull-right
          = @minute.published? ? 'Published' : 'UNPUBLISHED'
    .panel-body
      %p
        %b Date:
        = @minute.date
      %p
        %b Location:
        = @minute.location
      %label Members Attending
      %p= raw(@minute.members)
      - if !@minute.observing.blank?
        %label Observers Attending
        %p= raw(@minute.observing)
      %h3 Minutes
      %hr
      %p= raw(@minute.minutes)

  .btn-group        
    = link_to 'Back to minute list', minutes_path, :type => 'button', :class => 'btn btn-default'
    - if current_user
      = link_to 'Dashboard', admin_dashboard_path, :type => 'button', :class => 'btn btn-default'
      = link_to 'Edit', edit_minute_path(@minute), :type => 'button', :class => 'btn btn-warning'

  