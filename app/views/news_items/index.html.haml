.container
  %h1 News Items
  - if @news_items.blank?
    %p There are no news items.
  - else
    %table.table
      %thead
        %tr
          %th 
          %th Headline
          %th Date
          - if current_user and current_user.has_role? :admin
            %th{ :colspan => 3 }
      %tbody
        - @news_items.each do |news_item|
          %tr
            %td
              - if news_item.published?
                %button.published.btn.btn-xs.btn-success Unpublish
              - else
                %button.unpublished.btn.btn-xs.btn-primary Publish
            %td= news_item.headline
            %td= news_item.date
            - if current_news_item.has_role? :admin
              %td= link_to 'Show', news_item
              %td= link_to 'Edit', edit_news_item_path(news_item)
              %td= link_to 'Delete', news_item, :method => :delete, :data => { :confirm => 'Are you sure?' }

  .btn.btn-default
    = link_to 'New Item', new_news_item_path, :type => 'button'