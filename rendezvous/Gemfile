gem 'letter_opener'

group :development do
  gem 'byebug'
  gem 'pry'
  gem 'capistrano', '3.18.1'
  gem 'capistrano-rails'
  gem 'capistrano-bundler'
  gem 'capistrano-yarn'
  gem 'ed25519', '>= 1.2', '< 2.0'
