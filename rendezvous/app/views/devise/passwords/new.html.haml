.container
  .row
    .col-md-offset-3.col-md-6.col-xs-12
      %h2 Update your password
      = form_for(resource, as:  resource_name, url:  password_path(resource_name), html:  { method:  :post, class:  "form-horizontal" }) do |f|
        .form-group
          =f.label :email, class:  "col-sm-2 control-label"
          .col-sm-10
            = f.text_field :email, required:  false, autofocus:  true, class:  "form-control"
        .form-group
          .col-sm-offset-2.col-sm-10
            = f.submit "Reset my password", class:  "btn btn-large btn-primary"
