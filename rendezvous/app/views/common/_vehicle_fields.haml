- config = Rails.configuration.rendezvous
.nested-fields.card
  .card-body
    .card-text
      .row
        .col-md-4.col-12
          .form-group
            = f.input :year, collection:  [*1919..2015].reverse, selected:  (f.object.year.blank? ? nil : f.object.year), include_blank:  '-- Select year --'
      .row.select-with-other.marques
        .col-md-6
          .row
            .col-md-4
              .form-group
                %label Marque (Citroen or other French)
                = select_tag :select_marque, options_for_select(marques), selected:  selected_marque(f.object), class:  'form-control select-sm'
            .col-md-4 
              .form-group
                %label Model
                = select_tag :select_model, options_for_select(models), include_blank:  '-- Select CitroÃ«n model --', selected:  selected_model(f.object), class:  'form-control select-sm'

      .row.select-with-other.models      
        .col-md-6
          .row 
            .col-md-4.col-12
              .form-group
                = text_field_tag :other_marque, nil, label:  'Other marque', class:  'form-control  input-sm', placeholder:  'Non-Citroen marque'
                = f.input :marque, as:  :hidden, value:  f.object.marque

        .col-md-6.col-12
          .row
            .col-md-4.col-12
              .form-group
                %label Model
                = text_field_tag :other_model, nil, label:  'Other model', class:  'form-control input-sm', placeholder:  'Non-Citroen model'

              .col-md-4.col-12
                = f.input :model, as:  :hidden, value:  f.object.marque
      .row
        .col-md-12
          .form-group
            = f.input :other_info, input_html:  { class: 'input-sm', placeholder:  'Unusual Citroen model, distinguishing features, historical notes, etc.' }
      .row
        .col-md-12
          .judging-category
            %label Judging Category:
            = f.object.judging_category
    
          %br
          = link_to_remove_association '<i class="fa fa-minus" ></i> <i class="fa fa-car" ></i>'.html_safe, f, class:  'btn btn-danger '
          Remove this vehicle


