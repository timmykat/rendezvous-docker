.container 
  .row.justify-content-center
    .col-md-8
      .card
        .card-body 
          .card-text
            %h1.h3 Edit Vehicle
            = simple_form_for @vehicle do |f|
              = render partial: 'vehicle_fields', locals: { f: f, nested: false }
              .form-group
                = f.button :submit, input_html:  { value:  'Save vehicle' }, class:  "btn  btn-primary"