= render partial: 'common/registration_step', locals: { step: @step, registration: @event_registration }
.container
  .row.justify-content-center
    .col-md-8.col-12
      %p Please review the information below. If you need to change it please go back to the previous page and correct anything that needs changing.
      %p
        %strong NOTE: You will be able to add or change vehicles after you complete the payment page.
      = render partial:  'common/registration_info'
  .row
    .col-md-12.text-center          
      .form-group
        = link_to '<i class="fa fa-arrow-left"></i> Go back '.html_safe, edit_event_registration_path(@event_registration), class:  "btn  btn-primary"
        = link_to 'Go to payment <i class="fa fa-arrow-right"></i>'.html_safe, payment_event_registration_path(@event_registration), class:  'btn btn-primary go-to-payment'
        %img{ src: asset_path('Stopwatch.gif'), class: 'review-loader', style: 'display: none; padding-left: 20px; border: solid 1px #999; width: 30px; height: 30px;  border-radius: 5px'}