.container#keyed_contents
  .row.justify-content-center
    .col-md-10
      %h1 Manage Content
    .col-md-10
      %h2 Editing
      %nav.nav.navbar.navbar-light
        %ul.nav.navbar
          - @keyed_contents.each do |kc|
            %li.nav-item
              = link_to kc.key, "##{kc.key}"
              - if kc.content.nil? or kc.content.empty?
                .badge.badge-danger EMPTY

      - @keyed_contents.each do |kc|
        .card{ id: kc.key }
          .card-body 
            .card-text
              = simple_form_for kc do |f|
                = render partial:  'keyed_content_fields', locals: { f: f }
                %br
                .form-group
                  = f.button :submit, input_html:  { value:  'Update Content' }, class:  "btn btn-sm btn-primary"

      %p
        =link_to "Create new", new_keyed_content_path, class: "btn btn-sm btn-primary"
      - if @keyed_contents.size > 0
        %p
          =link_to "Destroy all", destroy_all_keyed_contents_path, method: :delete, class: "btn btn-sm btn-danger"  

    


              