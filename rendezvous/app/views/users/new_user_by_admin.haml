.container
  .row.justify-content-center
    .col-md-8.col-12
      .card 
        .card-body 
          .card-title
            %h1.h2 Create a new user 
          .card-text
            = simple_form_for @user, url: create_user_by_admin_path do |f|
              = render partial: 'common/user_info', locals:  { f: f, user_fields:  true, address:  true, connect:  false, vehicles:  true }
              %br
              .form-group
                = f.button :submit, input_html:  { value:  'Create' }, class:  "btn  btn-primary" 
