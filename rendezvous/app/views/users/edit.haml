.container
  .row.justify-content-center
    .col-md-10.col-12
      .card 
        .card-body 
          .card-title
            %h1.h2= (@user == current_user) ? 'My Profile' : "Profile for #{@user.full_name}"

          .card-text
            = simple_form_for @user do |f|
              = render partial:  'common/user_info', locals:  { f:  f, user_fields:  true, address:  true, connect:  true, vehicles:  true }
              %br
              .form-group
                = f.button :submit, input_html:  { value:  'Update' }, class:  "btn  btn-primary"
                           