.container
  .row
    .col-md-offset-2.col-md-8.col-xs-12.heading
      %h1= (@user == current_user) ? 'My Profile' : "Profile for #{@user.full_name}"
      = simple_form_for @user do |f|
        = render partial:  'common/user_info', locals:  { f:  f, user_fields:  true, address:  true, connect:  true, vehicles:  true }
        %br
        .form-group
          = f.button :submit, input_html:  { value:  'Update' }, class:  "btn btn-sm btn-primary"
                           