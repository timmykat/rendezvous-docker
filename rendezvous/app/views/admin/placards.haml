- @vehicles.each do |v|     
  .placard
    %header
      .logo
        %img{ src: asset_url('R25_iconique.png')}
      .text
        Citroen Rendezvous 2025

    .datum
      %span.label Vehicle:
      %span.value #{v.year_marque_model}

    .datum 
      %span.label Owner:
      %span.value #{v.user.full_name}

    .datum
      %span.label Category:
      %span.value #{v.judging_category}
        
    .qr-code-id 
      = image_tag qr_code_url(v.qr_code.code)
      %span.code #{v.qr_code.code} 
      %span (People's Choice ID)
