.container#vendors
  .row.justify-content-center
    .col-md-6
      %h1 Manage FAQs
      %table.table
        %tbody.sortable
          - @faqs.each_with_sortable_id do |faq, sortable_id|
            %tr{id: sortable_id}
              %td #{faq.question}
              %td #{faq.order}
              %td=link_to 'Edit', edit_admin_faq_path(faq), class: "btn btn-sm btn-primary"
              %td=link_to 'Delete', admin_faq_path(faq), mothod: :delete, class: "btn btn-sm btn-danger"

      %p
        =link_to "Create new", new_admin_faq_path, class: "btn btn-sm btn-primary"
      - if @faqs.size > 0
        %p
          =link_to "Destroy all", destroy_all_admin_faqs_path, method: :delete, class: "btn btn-sm btn-danger"  
    
:javascript
  $(function() {
    $('.sortable').railsSortable();
  });
              