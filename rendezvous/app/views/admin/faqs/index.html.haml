.container 
  .row.justify-content-center
    .col-md-8
      .card
        .card-body 
          .card-text 
            %h1.h3 FAQs
            %p
              =link_to "Create new", new_admin_faq_path, class: 'btn btn-primary'

            - unless @faqs
              %p No FAQs yet.
            - else
              %ul
                - @faqs.each do |faq|
                  %li
                    = link_to "Edit", edit_admin_faq_path(faq)
                    = faq.question
            
            - if @faqs.size > 0
              %p
                =link_to "Delete all", delete_all_admin_faq_path, class: 'btn btn-primary'                    