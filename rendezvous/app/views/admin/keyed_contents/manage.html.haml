.container#vendors
  .row.justify-content-center
    .col-md-8
      %h1 Manage Keyed Content
      - @keyed_contents.each do |kc|
        .card 
          .card-body 
            .card-text
              = simple_form_for kc do |f|
                = render partial:  'admin_keyed_content_fields', locals: { f: f }
                %br
                .form-group
                  = f.button :submit, input_html:  { value:  'Update Content' }, class:  "btn btn-sm btn-primary"

      %p
        =link_to "Create new", new_admin_keyed_content_path, class: "btn btn-sm btn-primary"
      - if @keyed_contents.size > 0
        %p
          =link_to "Destroy all", admin_destroy_all_keyed_contents_path, method: :delete, class: "btn btn-sm btn-danger"  

              