.container

  - @labels.each do |label, index|
    .label 
      .name #{label['name']}
      .people People: #{label['people']}
      .fee Fee: #{label['fee']}
      - if label['donation'] > 0
        .donation You donated - thank you!
      - if label['volunteers'] > 0
        .volunteers Number of volunteers: #{label['volunteers']}

      = image_tag 'rendezvous-logo.png', :alt => 'Citroen Rendezvous', :class => 'logo'


