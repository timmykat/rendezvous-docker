.accordion-view
  .accordion#accordion-content
    - n = 0
    - categorized_selections.each do |category, vehicles|
      - n += 1
      .accordion-item
        .accordion-header{ id: "heading-#{n.to_s}"}
          .alert.alert-info.accordion-button.d-flex.justify-content-between{ type: 'button', 'data-toggle' => 'collapse', 'data-target' => "#collapse-#{n}" }
            #{category} (#{vehicles.length})
            #{bootstrap_icon('arrows-expand', '30')}
        %div{ class: "collapse-#{n.to_s}"}
          - if vehicles.length > 1
            .alert.alert-warning 
              You need to eliminate #{pluralalize(vehicles.length - 1, 'choice')}
          - vehicles.each do |v|
            X #{v.year_marque_model} (#{v.user.full_name}, owner)